{
  "name": "random_color_gen",
  "version": "1.0.0",
  "description": "A random color generator used to generate random colors in hex, rgba, and hsla formats for web design or other use cases of color picking",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "node server.js",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "color generation",
    "hex code",
    "rgba",
    "hsla",
    "random numbers"
  ],
  "author": "richie-rich90454",
  "license": "Apache-2.0",
  "dependencies": {
    "@fastify/static": "^8.1.1",
    "fastify": "^5.3.2",
    "path": "^0.12.7",
    "terser": "^5.42.0"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.richie.randomcolorgen",
    "productName": "Random Color Generator",
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*"
    ],
    "win": {
      "icon": "favicon.ico",
      "target": [
        "portable"
      ]
    },
    "mac": {
      "icon": "favicon.icns",
      "target": [
        "dmg"
      ]
    },
    "linux": {
      "icon": "favicon.png",
      "target": [
        "AppImage"
      ]
    }
  }
}
